<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/sort2"
        android:layout_width="53dp"
        android:layout_height="18dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/sort_asc"
        android:gravity="left|fill_vertical"
        android:paddingLeft="6dp"
        android:text="거리"
        android:textColor="@color/color_text_sort_1"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/sort1"
        android:layout_width="53dp"
        android:layout_height="18dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/sort_desc_select"
        android:gravity="left|center_vertical"
        android:paddingLeft="6dp"
        android:text="할인율"
        android:textColor="@color/color_text_sort_1"
        android:textSize="10sp"
        app:layout_constraintRight_toLeftOf="@+id/sort2"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/sort2"
        android:layout_marginTop="0dp" />

</android.support.constraint.ConstraintLayout>